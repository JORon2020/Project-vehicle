-- Table for Device Information
CREATE TABLE device_information (
    device_id INT AUTO_INCREMENT PRIMARY KEY,
    model VARCHAR(100),
    manufacturer VARCHAR(100),
    firmware_version VARCHAR(50),
    serial_number VARCHAR(50),
    mac_address VARCHAR(17) -- Assuming MAC address format xx:xx:xx:xx:xx:xx
);

-- Table for Network Interfaces
CREATE TABLE network_interfaces (
    interface_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    interface_name VARCHAR(50),
    interface_type VARCHAR(50),
    interface_status ENUM('Up', 'Down'),
    ip_address VARCHAR(45), -- Assuming IPv4 or IPv6 address
    subnet_mask VARCHAR(45), -- Assuming IPv4 or IPv6 address
    speed_duplex_configuration VARCHAR(50),
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Routing Information
CREATE TABLE routing_information (
    route_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    destination_network VARCHAR(45), -- Assuming IPv4 or IPv6 address
    subnet_mask VARCHAR(45), -- Assuming IPv4 or IPv6 address
    next_hop VARCHAR(45), -- Assuming IPv4 or IPv6 address
    routing_protocol VARCHAR(50),
    routing_metric INT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Traffic Statistics
CREATE TABLE traffic_statistics (
    stats_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    bytes_sent BIGINT,
    bytes_received BIGINT,
    packets_sent INT,
    packets_received INT,
    traffic_utilization DECIMAL(10,2),
    traffic_distribution ENUM('Inbound', 'Outbound'),
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Network Performance
CREATE TABLE network_performance (
    performance_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    latency INT, -- In milliseconds
    packet_loss DECIMAL(5,2), -- Percentage
    jitter INT, -- In milliseconds
    round_trip_time INT, -- In milliseconds
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Device Health
CREATE TABLE device_health (
    health_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    cpu_utilization DECIMAL(5,2), -- Percentage
    memory_utilization DECIMAL(5,2), -- Percentage
    temperature DECIMAL(5,2), -- Assuming temperature in Celsius
    fan_speed INT, -- RPM
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Security Parameters
CREATE TABLE security_parameters (
    security_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    acl_configuration TEXT,
    firewall_rules TEXT,
    idps_logs TEXT,
    vpn_configuration TEXT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for DHCP Configuration
CREATE TABLE dhcp_configuration (
    dhcp_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    dhcp_server_configuration TEXT,
    dhcp_lease_information TEXT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Quality of Service (QoS)
CREATE TABLE qos (
    qos_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    qos_policies TEXT,
    traffic_prioritization_configuration TEXT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Network Address Translation (NAT)
CREATE TABLE nat_configuration (
    nat_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    nat_configuration TEXT,
    nat_table_entries TEXT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Wireless Parameters
CREATE TABLE wireless_parameters (
    wireless_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    wifi_ssid VARCHAR(50),
    wifi_channel INT,
    wifi_security_configuration TEXT,
    client_associations INT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Device Logs
CREATE TABLE device_logs (
    log_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    log_type ENUM('System', 'Event', 'Error'),
    log_message TEXT,
    log_timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Interface Errors and Discards
CREATE TABLE interface_errors_discards (
    error_id INT AUTO_INCREMENT PRIMARY KEY,
    interface_id INT,
    input_errors INT,
    output_errors INT,
    interface_discards INT,
    FOREIGN KEY (interface_id) REFERENCES network_interfaces(interface_id)
);

-- Table for Session Information
CREATE TABLE session_information (
    session_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    active_sessions INT,
    session_table_entries TEXT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Device Uptime and Availability
CREATE TABLE device_availability (
    availability_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    uptime INT, -- In seconds
    last_reboot_time TIMESTAMP,
    availability_percentage DECIMAL(5,2),
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for DNS Configuration
CREATE TABLE dns_configuration (
    dns_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    dns_server_configuration TEXT,
    dns_cache_entries TEXT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Virtual LAN (VLAN) Configuration
CREATE TABLE vlan_configuration (
    vlan_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    vlan_membership TEXT,
    vlan_trunking_configuration TEXT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Power Management
CREATE TABLE power_management (
    power_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    power_supply_status ENUM('OK', 'Faulty'),
    power_consumption DECIMAL(10,2), -- Assuming power consumption in watts
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Firmware/Software Updates
CREATE TABLE firmware_updates (
    update_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    current_version VARCHAR(50),
    update_status ENUM('Pending', 'Completed'),
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);

-- Table for Remote Management Configuration
CREATE TABLE remote_management (
    management_id INT AUTO_INCREMENT PRIMARY KEY,
    device_id INT,
    remote_access_protocol ENUM('SSH', 'Telnet'),
    snmp_configuration TEXT,
    FOREIGN KEY (device_id) REFERENCES device_information(device_id)
);
